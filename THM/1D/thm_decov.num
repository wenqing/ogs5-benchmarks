GeoSys-NUM: Numerical Parameter ----------------------------------------
$OVERALL_COUPLING
;min_iter -- max_iter
 2           3

#NUMERICS
 $PCS_TYPE
  RICHARDS_FLOW
 $ELE_UPWINDING
  0.5
 $ELE_MASS_LUMPING
  1
 $LINEAR_SOLVER 
; method error_tolerance max_iterations theta precond storage
  2      2 1.e-010       2000           1.0   100     4
 $NON_LINEAR_SOLVER 
; method error_tolerance max_iterations relaxation
  PICARD 1e-3            200            0.0
 $COUPLING_CONTROL
;error_method -- tolerances
 LMAX            1.e+7
  
#NUMERICS
 $PCS_TYPE
  HEAT_TRANSPORT
 $LINEAR_SOLVER 
; method error_tolerance max_iterations theta precond storage
  2      0 1.e-010       2000           1.0   100       4
 $NON_LINEAR_SOLVER  
; method error_tolerance max_iterations relaxation
  PICARD 1e-3            25             0.0
 $COUPLING_CONTROL
;error_method -- tolerances
 LMAX            120
  
#NUMERICS
 $PCS_TYPE
  DEFORMATION
 $LINEAR_SOLVER 
; method error_tolerance max_iterations theta precond storage
  2      0 1.e-10       2000          1.0   100     4
 $ELE_GAUSS_POINTS
  3
 $COUPLING_CONTROL
;error_method -- tolerances
 LMAX            1.e-3
 
#STOP
$GRAVITY_PROFILE
1  

$NON_LINEAR_SOLVER 
; method error_tolerance max_iterations relaxation
  NEWTON 1e-3 1e-6      100            0.0
